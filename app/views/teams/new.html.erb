<h1>create a squad</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@team) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.submit "Create Squad", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>